<div class="controlsDemo__wrapper" style="max-width: 300px">
    <Controls.scroll:Container>
        <div class="controlsDemo__inline-flex">
            <Controls.grid:View
                    keyProperty="id"
                    source="{{_viewSource}}"
                    header="{{_header}}"
                    rowSeparatorVisibility="{{true}}"
                    columnSeparatorSize="{{true}}"
                    columns="{{_columns}}">
            </Controls.grid:View>
        </div>
    </Controls.scroll:Container>
</div>
